{
  "$schema": "./node_modules/oxlint/configuration_schema.json",
  "extends": ["node_modules/eslint-config-conventions/.oxlintrc.json"],
  "rules": {
    "import-x/extensions": [
      "error",
      "ignorePackages",
      {
        "ts": "always",
        "tsx": "always",
        "js": "never",
        "jsx": "never"
      }
    ]
  }
}
