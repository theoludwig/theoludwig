{
  "extends": "@repo/config-typescript/tsconfig.json",
  "compilerOptions": {
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "types": ["@total-typescript/ts-reset", "@repo/i18n/messages.d.ts"],
    "allowJs": true,
    "paths": {
      "#*": ["./*"]
    },
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}
